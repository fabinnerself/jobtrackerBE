 
// ============================================================================
// .env.template
// ============================================================================
# Copia este archivo como .env y configura tus valores reales

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# MongoDB Local (desarrollo)
MONGODB_URI=mongodb://localhost:27017/jobseeker

# MongoDB Atlas (producción) - Reemplaza con tu URI real
MONGODB_URI_PROD=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/jobseeker?retryWrites=true&w=majority

# ===========================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ===========================================

# JWT Secret (DEBE ser una cadena de al menos 32 caracteres)
JWT_SECRET=tu-secreto-super-seguro-aqui-minimo-32-caracteres-para-jwt

# Duración del token (opcional, default: 7d)
JWT_EXPIRES_IN=7d

# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================

# Puerto del servidor
PORT=3000

# Entorno de ejecución
NODE_ENV=development

# Timezone
TZ=America/La_Paz

# ===========================================
# CONFIGURACIÓN DE CORS
# ===========================================

# URL del frontend (opcional)
FRONTEND_URL=http://localhost:3000

# Orígenes permitidos (separados por coma)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# CONFIGURACIÓN DE TERCEROS (OPCIONAL)
# ===========================================

# OpenAI API (para funcionalidades de IA futuras)
OPENAI_API_KEY=sk-tu-openai-key-aqui

# OAuth Providers (para futuras implementaciones)
GOOGLE_CLIENT_ID=tu-google-client-id
GOOGLE_CLIENT_SECRET=tu-google-client-secret

LINKEDIN_CLIENT_ID=tu-linkedin-client-id
LINKEDIN_CLIENT_SECRET=tu-linkedin-client-secret

GITHUB_CLIENT_ID=tu-github-client-id
GITHUB_CLIENT_SECRET=tu-github-client-secret

# ===========================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ===========================================

# Para notificaciones futuras
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password

# ===========================================
# CONFIGURACIÓN DE RATE LIMITING
# ===========================================

# Límite de requests por ventana de tiempo
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CONFIGURACIÓN DE ARCHIVOS
# ===========================================

# Tamaño máximo de archivo en bytes (5MB)
MAX_FILE_SIZE=5242880

# Tipos de archivo permitidos
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif
